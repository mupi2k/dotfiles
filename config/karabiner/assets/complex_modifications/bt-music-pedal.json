{
  "title": "Bluetooth Music Pedal",
  "rules": [
    {
      "description": "Up Arrow => <Back> in FF. or <Esc> in iTerm. Screen Left if held down",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to_if_alone": [
            {
              "key_code": "open_bracket",
              "modifiers": "left_command"
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "left_arrow",
              "modifiers": "left_control"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^org\\.mozilla\\.firefox$"
              ]
            },
            {
              "type": "device_if",
              "identifiers": [
                {
                  "product_id": 28705,
                  "vendor_id": 1256
                }
              ]
            }
          ]
        },
